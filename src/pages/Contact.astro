<!-- ---
// src/pages/contact.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="お問い合わせ - WebChaleur">
  <Header />

  <!-- ヒーローセクション -->
  <section
    class="pt-32 pb-20 bg-gradient-to-b from-gray-900 to-indigo-900/80 overflow-hidden"
  >
    <div class="container px-6 mx-auto">
      <div class="max-w-4xl mx-auto text-center">
        <!-- タイトルとサブタイトル -->
        <h1 class="text-3xl md:text-4xl font-light text-white mb-6">
          お問い合わせ
        </h1>
        <p
          class="text-gray-300 font-light leading-relaxed text-lg mb-8 max-w-2xl mx-auto"
        >
          サービスについてのご質問、お見積りのご依頼など、お気軽にお問い合わせください。
          通常2営業日以内にご返信いたします。
        </p>
      </div>
    </div>

    <!-- 装飾的な波形 -->
    <div class="absolute bottom-0 left-0 w-full overflow-hidden">
      <svg
        class="absolute bottom-0 left-0 w-full"
        height="40"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 1440 40"
        preserveAspectRatio="none"
      >
        <path
          fill="#0F172A"
          d="M0,15 L48,13 C96,11,192,7,288,9 C384,11,480,19,576,22 C672,25,768,23,864,19 C960,15,1056,9,1152,9 C1248,9,1344,15,1392,18 L1440,21 L1440,40 L1392,40 C1344,40,1248,40,1152,40 C1056,40,960,40,864,40 C768,40,672,40,576,40 C480,40,384,40,288,40 C192,40,96,40,48,40 L0,40 Z"
        >
        </path>
      </svg>
    </div>
  </section>

  <!-- お問い合わせフォーム -->
  <section class="py-20 bg-gray-950">
    <div class="container px-6 mx-auto">
      <div class="max-w-3xl mx-auto">
        <div
          class="backdrop-blur-lg bg-white/5 border border-white/10 rounded-sm overflow-hidden p-8"
        >
          <form id="contact-form" class="space-y-8">
            <!-- 名前 -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label
                  for="first-name"
                  class="block text-sm font-medium text-gray-300 mb-2"
                >
                  氏名（姓）<span class="text-indigo-400 ml-1">*</span>
                </label>
                <input
                  type="text"
                  id="first-name"
                  name="first-name"
                  required
                  class="w-full px-4 py-3 border-0 bg-white/5 focus:bg-white/10 focus:ring-2 focus:ring-indigo-500 rounded-sm text-white transition-colors"
                />
              </div>
              <div>
                <label
                  for="last-name"
                  class="block text-sm font-medium text-gray-300 mb-2"
                >
                  氏名（名）<span class="text-indigo-400 ml-1">*</span>
                </label>
                <input
                  type="text"
                  id="last-name"
                  name="last-name"
                  required
                  class="w-full px-4 py-3 border-0 bg-white/5 focus:bg-white/10 focus:ring-2 focus:ring-indigo-500 rounded-sm text-white transition-colors"
                />
              </div>
            </div>

            <!-- 会社名 -->
            <div>
              <label
                for="company"
                class="block text-sm font-medium text-gray-300 mb-2"
              >
                会社名
              </label>
              <input
                type="text"
                id="company"
                name="company"
                class="w-full px-4 py-3 border-0 bg-white/5 focus:bg-white/10 focus:ring-2 focus:ring-indigo-500 rounded-sm text-white transition-colors"
              />
            </div>

            <!-- メールとフォーン -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label
                  for="email"
                  class="block text-sm font-medium text-gray-300 mb-2"
                >
                  メールアドレス<span class="text-indigo-400 ml-1">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border-0 bg-white/5 focus:bg-white/10 focus:ring-2 focus:ring-indigo-500 rounded-sm text-white transition-colors"
                />
              </div>
              <div>
                <label
                  for="phone"
                  class="block text-sm font-medium text-gray-300 mb-2"
                >
                  電話番号
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-4 py-3 border-0 bg-white/5 focus:bg-white/10 focus:ring-2 focus:ring-indigo-500 rounded-sm text-white transition-colors"
                />
              </div>
            </div>

            <!-- お問い合わせ種別 -->
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">
                お問い合わせ種別<span class="text-indigo-400 ml-1">*</span>
              </label>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <div class="flex items-center">
                  <input
                    type="radio"
                    id="inquiry-type-1"
                    name="inquiry-type"
                    value="web-design"
                    class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-700 bg-gray-800"
                  />
                  <label
                    for="inquiry-type-1"
                    class="ml-2 block text-sm text-gray-300"
                  >
                    Webサイト制作
                  </label>
                </div>
                <div class="flex items-center">
                  <input
                    type="radio"
                    id="inquiry-type-2"
                    name="inquiry-type"
                    value="ec-site"
                    class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-700 bg-gray-800"
                  />
                  <label
                    for="inquiry-type-2"
                    class="ml-2 block text-sm text-gray-300"
                  >
                    ECサイト制作
                  </label>
                </div>
                <div class="flex items-center">
                  <input
                    type="radio"
                    id="inquiry-type-3"
                    name="inquiry-type"
                    value="web-marketing"
                    class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-700 bg-gray-800"
                  />
                  <label
                    for="inquiry-type-3"
                    class="ml-2 block text-sm text-gray-300"
                  >
                    Webマーケティング
                  </label>
                </div>
                <div class="flex items-center">
                  <input
                    type="radio"
                    id="inquiry-type-4"
                    name="inquiry-type"
                    value="other"
                    class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-700 bg-gray-800"
                  />
                  <label
                    for="inquiry-type-4"
                    class="ml-2 block text-sm text-gray-300"
                  >
                    その他
                  </label>
                </div>
              </div>
            </div>

            <!-- 予算 -->
            <div>
              <label
                for="budget"
                class="block text-sm font-medium text-gray-300 mb-2"
              >
                ご予算の目安
              </label>
              <select
                id="budget"
                name="budget"
                class="w-full px-4 py-3 border-0 bg-white/5 focus:bg-white/10 focus:ring-2 focus:ring-indigo-500 rounded-sm text-white transition-colors"
              >
                <option value="" selected disabled>選択してください</option>
                <option value="under-50">〜50万円</option>
                <option value="50-100">50万円〜100万円</option>
                <option value="100-200">100万円〜200万円</option>
                <option value="over-200">200万円〜</option>
                <option value="undecided">未定</option>
              </select>
            </div>

            <!-- お問い合わせ内容 -->
            <div>
              <label
                for="message"
                class="block text-sm font-medium text-gray-300 mb-2"
              >
                お問い合わせ内容<span class="text-indigo-400 ml-1">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="w-full px-4 py-3 border-0 bg-white/5 focus:bg-white/10 focus:ring-2 focus:ring-indigo-500 rounded-sm text-white transition-colors"
              ></textarea>
            </div>

            <!-- 個人情報保護方針 -->
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <input
                  id="privacy"
                  name="privacy"
                  type="checkbox"
                  required
                  class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-700 bg-gray-800 rounded"
                />
              </div>
              <div class="ml-3">
                <label for="privacy" class="text-sm text-gray-300">
                  <a
                    href="/privacy-policy"
                    class="text-indigo-400 hover:text-indigo-300 transition-colors"
                    >個人情報保護方針</a
                  >に同意します
                </label>
              </div>
            </div>

            <!-- 送信ボタン -->
            <div class="text-center">
              <button
                type="submit"
                class="px-8 py-3 text-base font-medium tracking-wider text-white bg-indigo-600 rounded-sm hover:bg-indigo-700 transition-colors"
              >
                送信する
              </button>
            </div>
          </form>
        </div>

        <!-- お問い合わせ情報 -->
        <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- 電話 -->
          <div
            class="backdrop-blur-lg bg-white/5 border border-white/10 rounded-sm p-6 text-center"
          >
            <div
              class="w-12 h-12 mx-auto mb-4 flex items-center justify-center rounded-full bg-indigo-900/50 border border-indigo-500/30"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-indigo-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
            </div>
            <h3 class="text-lg font-medium text-white mb-2">お電話</h3>
            <p class="text-gray-400 mb-4">平日 9:00-18:00</p>
            <p class="text-xl text-indigo-300">0155-XX-XXXX</p>
          </div>

          <!-- メール -->
          <div
            class="backdrop-blur-lg bg-white/5 border border-white/10 rounded-sm p-6 text-center"
          >
            <div
              class="w-12 h-12 mx-auto mb-4 flex items-center justify-center rounded-full bg-indigo-900/50 border border-indigo-500/30"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-indigo-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <h3 class="text-lg font-medium text-white mb-2">メール</h3>
            <p class="text-gray-400 mb-4">24時間受付</p>
            <p class="text-xl text-indigo-300">info@webchaleur.com</p>
          </div>

          <!-- 住所 -->
          <div
            class="backdrop-blur-lg bg-white/5 border border-white/10 rounded-sm p-6 text-center"
          >
            <div
              class="w-12 h-12 mx-auto mb-4 flex items-center justify-center rounded-full bg-indigo-900/50 border border-indigo-500/30"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-indigo-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-medium text-white mb-2">所在地</h3>
            <p class="text-gray-400 mb-4">来社の際は事前にご連絡ください</p>
            <p class="text-indigo-300">
              〒080-XXXX<br />
              北海道帯広市西X条南X丁目
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

